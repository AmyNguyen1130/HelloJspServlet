<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>HelloJspServlet</display-name>

	<welcome-file-list>
		<welcome-file>AddStudent.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Welcome</servlet-name>
		<servlet-class>servlets.Welcome</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddStudent</servlet-name>
		<servlet-class>servlets.AddStudent</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EditStudent</servlet-name>
		<servlet-class>servlets.EditStudent</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DeleteStudent</servlet-name>
		<servlet-class>servlets.DeleteStudent</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AddStudent</servlet-name>
		<url-pattern>/addStudent</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EditStudent</servlet-name>
		<url-pattern>/editStudent</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DeleteStudent</servlet-name>
		<url-pattern>/deleteStudent</url-pattern>
	</servlet-mapping>

</web-app>